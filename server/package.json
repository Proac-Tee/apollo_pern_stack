{
  "name": "Apollographql GraphQL with TypeScript",
  "private": true,
  "description": "This is a pern stack project",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "compile": "tsc",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "start": "npm run compile && nodemon ./dist/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@parcel/watcher": "^2.4.0",
    "@prisma/client": "^5.12.1",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^20.12.7",
    "concurrently": "^8.2.2",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "prisma": "^5.12.1",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
